<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar" style="height: auto;">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="@Html.Action("GetUserSpecificDetail", "user", new
                                      {
                                          opt = "Image"
                                      })" class="img-circle" alt="User Image" style="min-height:45px;"/>
            </div>
            <div class="pull-left info">
                <p>@Html.Action("GetUserSpecificDetail", "user", new
                                      {
                                          opt = "FullName"
                                      })</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
        <!-- /.search form -->
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu">
            <li class="header">MAIN NAVIGATION</li>
            <li class="treeview @Html.IsActive(ViewContext, new string[]{ 
                               Url.Action("Index","Home")
                           },"active")">
                <a href="@Url.Action("Index", "Home")">
                <i class="fa fa-home"></i> <span>Home</span>
                </a>
                @*<ul class="treeview-menu">
                    <li class="active"><a href="@Url.Action("Index","Home")"><i class="fa fa-circle-o"></i> Dashboard v1</a></li>
                </ul>*@
            </li>
            <li class="treeview @Html.IsActive(ViewContext, new string[] {
                               Url.Action("Index", "Sale")
                           }, "active")">
                <a href="@Url.Action("Index", "Sale")"><i class="fa fa-dollar"></i> <span>Sale</span></a>
            </li>
            <li class="treeview @Html.IsActive(ViewContext, new string[] {
                               Url.Action("Index", "Rate")
                           }, "active")">
                <a href="@Url.Action("Index", "Rate")"><i class="glyphicon glyphicon-list"></i> <span>Rate</span></a>
            </li>
            <li class="treeview @Html.IsActive(ViewContext, new string[] {
                               Url.Action("Index", "Truck")
                           }, "active")">
                <a href="@Url.Action("Index", "Truck")"><i class="fa fa-truck"></i> <span>Truck</span></a>
            </li>
            <li class ="treeview @Html.IsActive(ViewContext, new string[] {
                               Url.Action("Index", "Driver")
                           }, "active")">
                <a href="@Url.Action("Index", "Driver")"><i class="glyphicon glyphicon-user"></i> <span>Driver</span></a>
            </li>
            <li class="treeview @Html.IsActive(ViewContext, new string[] {
                               Url.Action("Index", "Destination")
                           }, "active")">
                <a href="@Url.Action("Index", "Destination")"><i class="glyphicon glyphicon-map-marker"></i> <span>Destination</span></a>
            </li>
            <li class="treeview @Html.IsActive(ViewContext, new string[]{
                               Url.Action("SpecificDate", "Report"),
                               Url.Action("DateRange", "Report")
                           },"active")">
                <a href="#">
                    <i class="fa fa-dashboard"></i> <span>Truck Report</span> <i class="fa fa-angle-left pull-right"></i>
                </a>
                <ul class="treeview-menu">
                    <li class="active"><a href="@Url.Action("SpecificDate", "Report")"><i class="fa fa-circle-o"></i> Specific Date</a></li>
                    <li class="active"><a href="@Url.Action("DateRange", "Report")"><i class="fa fa-circle-o"></i> Date Range</a></li>
                </ul>
            </li>



            <li class="treeview @Html.IsActive(ViewContext, new string[] { 
                               Url.Action("Index", "Role"), 
                               Url.Action("Index", "User"),
                               Url.Action("CreateEdit", "User")
                           }, "active")">
                <a href="#">
                    <i class="fa fa-gear"></i> <span>Administration</span> <i class="fa fa-angle-left pull-right"></i>
                </a>
                <ul class="treeview-menu">
                    <li><a href="@Url.Action("Index", "User")"><i class="fa fa-circle-o"></i> Users</a></li>
                    <li><a href="@Url.Action("Index", "Role")"><i class="fa fa-circle-o"></i> Roles</a></li>
                </ul>
            </li>
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>